while True:
		for i in range(get_world_size()):
			if  get_entity_type() == Entities.Dead_Pumpkin:
				harvest()
				plant(Entities.Pumpkin)
				if get_water()<0.3:
					use_item(Items.Water)
				move(North)
				if get_entity_type() == Entities.Pumpkin:
					move(North)
			else:
				if get_ground_type() == Grounds.Grassland:
					till()
				plant(Entities.Pumpkin)
				if get_water()<0.3:
					use_item(Items.Water)
				move(North)
				
		move(East)
